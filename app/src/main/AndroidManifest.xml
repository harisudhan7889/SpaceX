<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.spacex.launch">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".SpaceXApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_spacex_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.spacex.launch.list.ui.ListLaunchesActivity"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".detail.ui.LaunchDetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

    </application>

</manifest>