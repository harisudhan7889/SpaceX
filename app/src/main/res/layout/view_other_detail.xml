<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="@dimen/spacex_margin_small"
    android:layout_marginEnd="@dimen/spacex_margin_small"
    android:layout_marginStart="@dimen/spacex_margin_small"
    android:layout_marginTop="@dimen/spacex_margin_small"
    app:cardCornerRadius="@dimen/spacex_margin_small"
    app:cardElevation="@dimen/spacex_margin_very_small">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/spacex_margin_large"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spacex_other_detail_label"
            android:textColor="@android:color/black"
            android:textSize="@dimen/spacex_text_size_large"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/locationView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacex_margin_small"
            android:layout_marginEnd="@dimen/spacex_margin_small"
            android:layout_marginStart="@dimen/spacex_margin_small"
            android:layout_marginTop="@dimen/spacex_margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label"
            app:layout_constraintVertical_bias="0.04"
            app:srcCompat="@drawable/ic_place_grey_24dp" />

        <TextView
            android:id="@+id/locationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacex_margin_small"
            android:layout_marginEnd="@dimen/spacex_margin_small"
            android:layout_marginStart="@dimen/spacex_margin_small"
            android:textSize="@dimen/spacex_text_size_medium"
            app:layout_constraintBottom_toBottomOf="@id/locationView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.016"
            app:layout_constraintStart_toEndOf="@id/locationView"
            app:layout_constraintTop_toTopOf="@id/locationView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Kwaja Island" />

        <ImageView
            android:id="@+id/rocketView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacex_margin_small"
            android:layout_marginEnd="@dimen/spacex_margin_small"
            android:layout_marginStart="@dimen/spacex_margin_small"
            android:layout_marginTop="@dimen/spacex_margin_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.025"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/locationText"
            app:layout_constraintVertical_bias="0.033"
            app:srcCompat="@drawable/ic_rocket_grey_24dp" />

        <TextView
            android:id="@+id/rocketName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacex_margin_small"
            android:layout_marginEnd="@dimen/spacex_margin_small"
            android:layout_marginStart="@dimen/spacex_margin_small"
            android:textSize="@dimen/spacex_text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.013"
            app:layout_constraintStart_toEndOf="@id/rocketView"
            app:layout_constraintTop_toTopOf="@id/rocketView"
            app:layout_constraintVertical_bias="0.0"
            tools:text="Falcon 1" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
